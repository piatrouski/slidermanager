<layout version="0.1.0">
    <catalog_category_layered>
        <reference name="head">
            <action method="addJs" ifconfig="slidermanager/settings/enabled">
                <script>belvg/slidermanager/jquery-1.8.3.min.js</script>
            </action>
            <action method="addJs" ifconfig="slidermanager/settings/enabled">
                <script>belvg/slidermanager/jquery-noconflict.js</script>
            </action>
            <action method="addJs" ifconfig="slidermanager/settings/enabled">
                <script>belvg/slidermanager/jquery.nivo.slider.js</script>
            </action>
            <action method="addJs" ifconfig="slidermanager/settings/enabled">
                <script>belvg/slidermanager/core-frontend.js</script>
            </action>
            <action method="addCss" ifconfig="slidermanager/settings/enabled">
                <stylesheet>css/belvg/slidermanager/nivo-slider.css</stylesheet>
            </action>
            <action method="addCss" ifconfig="slidermanager/settings/enabled">
                <stylesheet>css/belvg/slidermanager/themes/light/light.css</stylesheet>
            </action>
        </reference>
        <reference name="content">
            <block type="slidermanager/slider" name="slidermanager-slider" as="slider" before="-" template="slidermanager/category.phtml" />
        </reference>
    </catalog_category_layered>

    <catalog_category_default>
        <reference name="head">
            <action method="addJs" ifconfig="slidermanager/settings/enabled">
                <script>belvg/slidermanager/jquery-1.8.3.min.js</script>
            </action>
            <action method="addJs" ifconfig="slidermanager/settings/enabled">
                <script>belvg/slidermanager/jquery-noconflict.js</script>
            </action>
            <action method="addJs" ifconfig="slidermanager/settings/enabled">
                <script>belvg/slidermanager/jquery.nivo.slider.js</script>
            </action>
            <action method="addJs" ifconfig="slidermanager/settings/enabled">
                <script>belvg/slidermanager/core-frontend.js</script>
            </action>
            <action method="addCss" ifconfig="slidermanager/settings/enabled">
                <stylesheet>css/belvg/slidermanager/nivo-slider.css</stylesheet>
            </action>
            <action method="addCss" ifconfig="slidermanager/settings/enabled">
                <stylesheet>css/belvg/slidermanager/themes/light/light.css</stylesheet>
            </action>
        </reference>
        <reference name="content">
            <block type="slidermanager/slider" name="slidermanager-slider" as="slider" before="-" template="slidermanager/category.phtml" />
        </reference>
    </catalog_category_default>
</layout>